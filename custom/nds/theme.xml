<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="gamecarousel" tinyScreen="false" displayName="GAMELIST">

        <!-- Background Default -->
        <image name="background_default_overlay" extra="true">
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./overlay.png</path>
            <zIndex>10</zIndex>
        </image>

        <!-- Video background -->
        <video ifSubset="video_gamelist:Ativo" name="md_video">
            <pos>0.492 0.19</pos>
            <size>0.2255 0.685</size>
            <zIndex>9</zIndex>
        </video>

        <!-- Fanart background -->
        <image name="md_fanart">
            <pos>0.492 0.19</pos>
            <size>0.2255 0.685</size>
            <opacity>0</opacity>
            <scale>2</scale>
            <scaleOrigin>0.5 0.5</scaleOrigin>
            <zIndex>8</zIndex>
            <!-- <clipRect>0 0 1 0.5</clipRect> -->
        </image>

    </view>

</theme>