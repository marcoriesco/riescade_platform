<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>

    <view name="system, gamecarousel, grid">

        <!-- UserInfo -->
        <image name="platforms_avatar" extra="static">
            <origin>1 0</origin>
            <pos>0.827 0.037</pos>
            <maxSize>0.05 0.05</maxSize>
            <path>./_assets/_parts/user.jpg</path>
            <roundCorners>0.5</roundCorners>
            <zIndex>99</zIndex>
            <onclick>netplay</onclick>

            <container>
                <image name="platforms_avatar_netplay" extra="static">
                    <pos>0.7 0.75</pos>
                    <size>0.3 0</size>
                    <color if="{system.netplay} == true">09FE87</color>
                    <color if="{system.netplay} == false">CCCCCC</color>
                    <path>./_assets/icons/Netplay.png</path>
                    <autoFade>true</autoFade>
                    <scale>0.8</scale>
                    <scaleOrigin>0.5 0.5</scaleOrigin>

                    <storyboard repeat="forever">
                        <animation property="scale" from="0.8" to="1" begin="100" duration="1200" autoReverse="true" mode="EaseInOut" />
                    </storyboard>
                </image>
            </container>
        </image>

        <webimage if="{global.cheevos} == true" name="platforms_avatar" extra="static">
            <origin>1 0</origin>
            <pos>0.827 0.037</pos>
            <maxSize>0.05 0.05</maxSize>
            <path if="${global.cheevos.username}">https://media.retroachievements.org/UserPic/${global.cheevos.username}.png</path>
            <roundCorners>0.5</roundCorners>
            <zIndex>99</zIndex>
            <onclick>netplay</onclick>

            <container>
                <image name="platforms_avatar_netplay" extra="static">
                    <pos>0.7 0.75</pos>
                    <size>0.3 0</size>
                    <color if="{system.netplay} == true">09FE87</color>
                    <color if="{system.netplay} == false">CCCCCC</color>
                    <path>./_assets/icons/Netplay.png</path>
                    <autoFade>true</autoFade>
                    <scale>0.8</scale>
                    <scaleOrigin>0.5 0.5</scaleOrigin>

                    <storyboard if="{system.netplay} == true" repeat="forever">
                        <animation property="scale" from="0.8" to="1" begin="100" duration="1200" autoReverse="true" mode="EaseInOut" />
                    </storyboard>
                </image>
                <image if="{system.cheevos} == true" name="platforms_avatar_cheevos" extra="static">
                    <pos>0.45 -0.30</pos>
                    <size>0.67 0</size>
                    <path>./_assets/icons/Cheevos.png</path>
                    <autoFade>true</autoFade>
                </image>
            </container>
        </webimage>

        <image name="platforms_config" extra="static">
            <origin>1 0</origin>
            <pos>0.781 0.0434</pos>
            <size>0.032 0</size>
            <path>./_assets/icons/Config.png</path>
            <zIndex>99</zIndex>
            <onclick>options</onclick>
        </image>

        <image name="platforms_filter" extra="static">
            <origin>1 0</origin>
            <pos>0.726 0.0432</pos>
            <size>0.032 0</size>
            <path>./_assets/icons/Filter.png</path>
            <zIndex>99</zIndex>
            <onclick>search</onclick>
        </image>

    </view>

    <view name="system">

        <stackpanel name="platforms" extra="static">
            <pos>0.045 0.01</pos>
            <size>0.5 0.1</size>
            <zIndex>99</zIndex>

            <container>
                <stackpanel reverse="true">
                    <container>
                        <size>1 1</size>
                        <stackpanel>
                            <size>1 1</size>
                            <pos>0 0</pos>
                            <separator>20</separator>

                            <text name="platform_Arcade">
                                <size>0.5 0.1</size>
                                <text>Arcades</text>
                                <fontPath>./_assets/fonts/OpenSans-Light.ttf</fontPath>
                                <fontPath if="{system.hardwareType} == 'arcade'">./_assets/fonts/OpenSans-SemiBold.ttf</fontPath>
                                <fontSize>0.026</fontSize>
                                <color>FFFFFFFF</color>
                                <alignment>left</alignment>
                            </text>
                            <text name="platform_Computer">
                                <size>0.5 0.1</size>
                                <text>Computers</text>
                                <fontPath>./_assets/fonts/OpenSans-Light.ttf</fontPath>
                                <fontPath if="{system.hardwareType} == 'computer'">./_assets/fonts/OpenSans-SemiBold.ttf</fontPath>
                                <fontSize>0.026</fontSize>
                                <color>FFFFFFFF</color>
                                <alignment>left</alignment>
                            </text>
                            <text name="platform_Console">
                                <size>0.5 0.1</size>
                                <text>Consoles</text>
                                <fontPath>./_assets/fonts/OpenSans-Light.ttf</fontPath>
                                <fontPath if="{system.hardwareType} == 'console'">./_assets/fonts/OpenSans-SemiBold.ttf</fontPath>
                                <fontSize>0.026</fontSize>
                                <color>FFFFFFFF</color>
                                <alignment>left</alignment>
                            </text>
                            <text name="platform_Pinball">
                                <size>0.5 0.1</size>
                                <text>Pinball</text>
                                <fontPath>./_assets/fonts/OpenSans-Light.ttf</fontPath>
                                <fontPath if="{system.hardwareType} == 'pinball'">./_assets/fonts/OpenSans-SemiBold.ttf</fontPath>
                                <fontSize>0.026</fontSize>
                                <color>FFFFFFFF</color>
                                <alignment>left</alignment>
                            </text>
                            <text name="platform_Port">
                                <size>0.5 0.1</size>
                                <text>Ports</text>
                                <fontPath>./_assets/fonts/OpenSans-Light.ttf</fontPath>
                                <fontPath if="{system.hardwareType} == 'port'">./_assets/fonts/OpenSans-SemiBold.ttf</fontPath>
                                <fontSize>0.026</fontSize>
                                <color>FFFFFFFF</color>
                                <alignment>left</alignment>
                            </text>
                            <text name="platform_Portable">
                                <size>0.5 0.1</size>
                                <text>Portables</text>
                                <fontPath>./_assets/fonts/OpenSans-Light.ttf</fontPath>
                                <fontPath if="{system.hardwareType} == 'portable'">./_assets/fonts/OpenSans-SemiBold.ttf</fontPath>
                                <fontSize>0.026</fontSize>
                                <color>FFFFFFFF</color>
                                <alignment>left</alignment>
                            </text>
                        </stackpanel>
                    </container>
                </stackpanel>
            </container>
        </stackpanel>

    </view>

    <view name="gamecarousel">

        <text name="platforms" extra="static">
            <pos>0.045 0.01</pos>
            <size>0.5 0.1</size>
            <text>{system:fullName}</text>
            <fontPath>./_assets/fonts/OpenSans-SemiBold.ttf</fontPath>
            <fontSize>0.032</fontSize>
            <color>FFFFFFFF</color>
            <alignment>left</alignment>
            <zIndex>99</zIndex>
        </text>

    </view>

</theme>