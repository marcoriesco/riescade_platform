<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <corners>7</corners>
    <cornersOfMedias>12</cornersOfMedias>
  </variables>

  <customView name="Content" inherits="grid" displayName="Retrobat">
    <!-- Logo do Sistema -->
    <image name="logo">
      <origin>0 0</origin>
      <pos>0.025 0.04</pos>
      <size>0.1 </size>
      <scale>1</scale>
      <zIndex>99</zIndex>

      <!-- try png -->
      <path>./_assets/logos/clean/${system.theme}.png</path>
      <!-- try svg -->
      <path>./_assets/logos/clean/${system.theme}.svg</path>
      <!-- check if lang resources exist -->
      <path>./_assets/logos/clean/${system.theme}-${lang}.png</path>
      <path>./_assets/logos/clean/${system.theme}-${lang}.svg</path>
      <linearSmooth>true</linearSmooth>
    </image>
    <!-- Background Default -->
    <image name="background_default" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>./_assets/_parts/default.png</path>
      <zIndex>1</zIndex>
    </image>

    <!-- Overlay background -->
    <image name="overlay" extra="true">
      <origin>0 0</origin>
      <pos>0 0</pos>
      <size>1 1</size>
      <path>./_assets/_parts/overlay.png</path>
      <zIndex>2</zIndex>
    </image>

    <imagegrid name="gamegrid">
      <autoLayout>3 5</autoLayout>

      <margin>0.005 0.005</margin>
      <pos>0.025 0.16</pos>
      <size>0.950 0.84</size>
      <padding>0.03 0.04 0.03 0.1</padding>

      <itemTemplate>
        <container name="contentRoot">
          <pos>0 0</pos>
          <size>1 1</size>
          <padding>0 0 0 3</padding>
          <opacity>1</opacity>
          <container>
            <image>
              <path>./_assets/_parts/white.png</path>
              <pos>0 0</pos>
              <origin>0 0</origin>
              <size>1 1</size>
              <color>141416</color>
              <zIndex>2</zIndex>
              <roundCorners>${corners}</roundCorners>
              <opacity>0.75</opacity>

              <image name="shade">
                <path>./_assets/_parts/bg.png</path>
                <pos>0 0</pos>
                <origin>0 0</origin>
                <size>1 1</size>
                <color>FFFFFF16</color>
                <roundCorners>${corners}</roundCorners>
              </image>
            </image>

            <container padding="-8" zIndex="1">
              <ninepatch>
                <pos>0 0</pos>
                <size>1 1</size>
                <path>./../../_assets/_parts/framew.png</path>
                <cornerSize>20 20</cornerSize>
                <padding>-2 -2</padding>
                <color>000000B0</color>
                <zIndex>3</zIndex>

                <storyboard event="activate" repeat="forever">
                  <animation property="path" to="./../../_assets/_parts/framewsel.png"/>
                  <animation property="padding" to="-15 -15"/>
                  <animation property="cornerSize" to="36 36"/>
                  <animation property="color" from="FFFFFFFF" to="9f0043" duration="1500" mode="easeOut"/>
                  <animation property="color" from="9f0043" to="FFFFFFFF" begin="1500" duration="1500" mode="easeOut"/>
                </storyboard>
                <storyboard event="deactivate">
                  <animation property="path" to="./../../_assets/_parts/framew.png"/>
                  <animation property="color" to="000000B0"/>
                  <animation property="padding" to="-2 -2"/>
                  <animation property="cornerSize" to="20 20"/>
                </storyboard>
              </ninepatch>
            </container>
          </container>

          <stackpanel>
            <pos>0 0</pos>
            <size>1 1</size>
            <container>
              <w>{grid:h}</w>
              <image name="imageMarquee">
                <path>{game:marquee}</path>
                <origin>0.5</origin>
                <pos>0.5</pos>
                <maxSize>0.90 0.75</maxSize>
                <linearSmooth>true</linearSmooth>
                <zIndex>40</zIndex>
                <color>white</color>
              </image>
            </container>
            <container name="spacer2" w="0.007"/>
            <container name="atright">
              <padding>10 10 15 10</padding>
              <container>
                <stackpanel reverse="true">
                  <container>
                    <size>1 1</size>
                    <stackpanel>
                      <size>1 0.44</size>
                      <pos>0 0</pos>
                      <separator>6</separator>

                      <text name="the_game_name">
                        <pos>0 0</pos>
                        <origin>0 0</origin>
                        <size>1 0.3</size>
                        <text>{game:nameShort}</text>
                        <fontPath>./_assets/fonts/OpenSans-Regular.ttf</fontPath>
                        <fontSize>0.026</fontSize>
                        <verticalAlignment>bottom</verticalAlignment>
                        <multiLine>false</multiLine>
                        <extraTextColor>707070</extraTextColor>
                        <color>FFFFFFFF</color>
                        <glowColor>00000040</glowColor>
                        <glowSize>1</glowSize>
                      </text>
                      <text name="the_game_extra">
                        <pos>0 0</pos>
                        <origin>0 0</origin>
                        <size>0 1</size>
                        <text>{game:nameExtra}</text>
                        <extraTextColor>FFFFFF70</extraTextColor>
                        <color>FFFFFFFF</color>
                        <fontPath>./_assets/fonts/OpenSans-Regular.ttf</fontPath>
                        <fontSize>0.016</fontSize>
                        <padding>0 0 0 0.08</padding>
                        <verticalAlignment>bottom</verticalAlignment>
                        <multiLine>false</multiLine>
                      </text>
                    </stackpanel>
                    <text>
                      <pos>0 0.48</pos>
                      <size>1 0.52</size>
                      <text>{game:desc}</text>
                      <color>FFFFFFA0</color>
                      <fontPath>./_assets/fonts/OpenSans-Regular.ttf</fontPath>
                      <fontSize>0.018</fontSize>
                      <autoScroll>false</autoScroll>
                      <multiLine>true</multiLine>
                      <lineSpacing>1.25</lineSpacing>
                      <autoScrollDelay>250</autoScrollDelay>
                      <verticalAlignment>top</verticalAlignment>
                      <storyboard event="activate" ifSubset="previewbar:no">
                        <animation property="autoScroll" to="vertical"/>
                      </storyboard>
                      <storyboard event="deactivate" ifSubset="previewbar:no">
                        <animation property="autoScroll" to="false"/>
                      </storyboard>
                    </text>
                  </container>
                </stackpanel>
              </container>
            </container>
          </stackpanel>
        </container>
      </itemTemplate>
    </imagegrid>
  </customView>
</theme>