<?xml version="1.0" encoding="UTF-8"?>

<theme defaultView="gamecarousel">
    <formatVersion>7</formatVersion>

    <!-- ICONSETS -->
    <subset name="iconsets" displayName="ICONES DA AJUDA">
        <include name="Default">./_assets/iconsets/default.xml</include>
        <include name="Arcade">./_assets/iconsets/arcade.xml</include>
        <include name="Gamecube">./_assets/iconsets/gamecube.xml</include>
        <include name="PSX">./_assets/iconsets/psx.xml</include>
        <include name="PS5">./_assets/iconsets/ps5.xml</include>
        <include name="Switch">./_assets/iconsets/switch.xml</include>
        <include name="SNES">./_assets/iconsets/snes.xml</include>
        <include name="XBOX">./_assets/iconsets/xbox.xml</include>
        <include name="XBOX One">./_assets/iconsets/xboxone.xml</include>
    </subset>

    <!-- VIDEO GAMELIST -->
    <subset name="video_gamelist" displayName="VIDEO GAMEPLAY" appliesTo="gamelist">
        <include name="Ativo" />
        <include name="Desativado" />
    </subset>

    <!-- COVER GAMELIST -->
    <subset name="cover_gamelist" displayName="COVER GAME" appliesTo="gamelist">
        <include name="Ativo" />
        <include name="Desativado" />
    </subset>


    <feature supported="carousel">
        <view name="system">
            <sound name="bgsound"></sound>
        </view>
    </feature>


    <include name="menu">./_views/common/menu.xml</include>
    <include name="screen">./_views/common/screen.xml</include>

    <include name="system">./_views/riescade_system.xml</include>
    <include name="gamecarousel">./_views/riescade_gamelist.xml</include>

    <include>./_views/common/header.xml</include>

    <!--
    Theme: es-theme-carbon
    author: Fabrice CARUSO
    license: creative commons CC-BY-NC-SA
    originally based on: "Carbon" by Eric Hettervik (Rookervik)
    originally based on: "simple" by nils bonenberger
